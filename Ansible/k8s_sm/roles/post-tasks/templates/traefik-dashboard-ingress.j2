apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: traefik-dashboard
  namespace: ingress-system
spec:
  ingressClassName: traefik-ingress
  rules:
  - host: {{ traefik_dashboard_host }}
    http:
      paths:
      - backend:
          service:
            name: traefik-ingress
            port:
              number: 9000
        path: /
        pathType: Prefix
